<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="autotests">
  <variable name="commonLogPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
  <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${commonLogPattern}</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>
  </appender>
  <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>build/at-log.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>build/at-log-%d{MM-dd-yyyy}.log.gz</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${commonLogPattern}</pattern>
      <outputPatternAsHeader>true</outputPatternAsHeader>
    </encoder>
  </appender>
  <logger name="com.codeborne.selenide.webdriver.WebDriverFactory" level="error"/>
  <logger name="com.codeborne.selenide.impl.WebDriverThreadLocalContainer" level="error"/>
  <logger name="com.codeborne.selenide.drivercommands.CreateDriverCommand" level="error"/>
  <logger name="com.codeborne.selenide.drivercommands.CloseDriverCommand" level="error"/>
  <logger name="com.codeborne.selenide.drivercommands.DisposablesRegistry" level="error"/>
  <logger name="org.asynchttpclient.netty.handler.HttpHandler" level="info"/>
  <logger name="org.asynchttpclient.netty.channel.ChannelManager" level="info"/>
  <logger name="org.asynchttpclient.netty.request.NettyRequestSender" level="info"/>
  <root>
    <appender-ref ref="ConsoleAppender"/>
    <appender-ref ref="RollingFile"/>
  </root>
</Configuration>